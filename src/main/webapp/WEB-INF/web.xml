<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>cooperative</display-name>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ru.innopolis.sportgym.servlets.security.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrationPage</servlet-name>
        <servlet-class>ru.innopolis.sportgym.servlets.security.RegistrationPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrationUserServlet</servlet-name>
        <servlet-class>ru.innopolis.sportgym.servlets.security.RegistrationUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>ru.innopolis.sportgym.servlets.security.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editPageServlet</servlet-name>
        <servlet-class>ru.innopolis.sportgym.servlets.security.UserEditPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editServlet</servlet-name>
        <servlet-class>ru.innopolis.sportgym.servlets.security.UserEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginPage</servlet-name>
        <servlet-class>ru.innopolis.sportgym.servlets.security.LoginPage</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrationPage</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrationUserServlet</servlet-name>
        <url-pattern>/saveProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editPageServlet</servlet-name>
        <url-pattern>/editUserPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editServlet</servlet-name>
        <url-pattern>/editProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginPage</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <session-config>
        <session-timeout>180</session-timeout>
    </session-config>

    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/403.jsp</location>
    </error-page>

    <resource-ref>
        <res-ref-name>jdbc/dataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>